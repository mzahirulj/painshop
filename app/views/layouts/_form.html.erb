<div class="container-fluid">
<%= form_for(tshirt) do |f| %>
  <% if tshirt.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tshirt.errors.count, "error") %> prohibited this tshirt from being saved:</h2>
      <ul>
      <% tshirt.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :titel %>
    <%= f.text_field :titel %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :category %>
    <%= f.select(:category,[['Men'],['Women'],['Kinds']]) %>
  </div>

  <div class="field">
    <%= f.label :color %>
    <%= f.select(:color,[['Red'],['Black'],['Green'],['White']]) %>
  </div>


  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>

  <div class="field">
    <%= f.label :stock %>
    <%= f.select(:stock,[['Yes'],['No']] )%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

</div>